<%= render partial: '/layouts/navbar' %>

<div class="container">
  <div class="card">
    <div class="card-top blue-grey darken-4">
      <svg  xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 634 654"
            preserveAspectRatio="xMidYMid meet"
            width="100"
            height="100"
            class="profile-img left">
            <defs>
              <style>
                .cls-1{fill:#f5f5f5;}
                .cls-2{fill:#e0e0e0;}
              </style>
            </defs>
            <title>profile_img</title>
                <g  id="Layer-1"
                data-name="Layer 1">
                  <circle class="cls-1" cx="317" cy="332" r="317"/>
                  <path class="cls-2" d="M317.5,376c-119,0-215.5,80.59-215.5,180,0,3.94.17,7.84.47,11.72C158.92,621.28,234.25,654,317,654c83.28,0,159-33.14,215.61-87.32.25-3.53.39-7.09.39-10.68C533,456.59,436.52,376,317.5,376Z"/>
                  <circle class="cls-2" cx="317" cy="229" r="125.5"/>
              </g></svg>
              <h3 class="name white-text"><%= @user.first_name + ' ' + @user.last_name%></h3>
    </div>
    <div class="card-content">
      <div class="bio">
        <p class="grey-text text-lighten-1">bio</p>
        <p>
          <% if @user.skills.nil? || @user.bio.empty?%>
            <%= "this person does not have a bio" %>
          <% else %>
            <%= @user.bio %>
          <% end %>
        </p>
      </div>
      <div class="skills">
        <p class="grey-text text-lighten-1">skills</p>
        <p>
          <% if @user.skills.nil? || @user.skills.empty?%>
            <%= "this person does not have any skills" %>
          <% else %>
            <%= @user.skills %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
